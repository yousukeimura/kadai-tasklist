<%= form_for(tasklist) do |f| %>
  <% if tasklist.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% tasklist.errors.full_tasklists.each do |tasklist| %>
          <li><%= tasklist %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :title, 'タイトル' %>
  <%= f.text_field :title %>

  <%= f.label :content, 'メッセージ' %>
  <%= f.text_field :content %>

  <%= f.submit '投稿' %>
<% end %>